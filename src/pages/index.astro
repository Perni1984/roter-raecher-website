---
import '@/styles/globals.css'
import Layout from '../layouts/Layout.astro';
import { Navigation } from '@/components/Navigation';
import { BookShelf } from '@/components/BookShelf';

const comics = [
  {
    id: '1',
    title: 'Ausgabe 1 - Der Rote Rächer vs. der rote Godzilla',
    cover: './images/ausgabe-1/2024-10-13-0001.jpg',
    description: 'Follow the adventures of Captain Nova as she explores the furthest reaches of space.',
    pages: [
      './images/ausgabe-1/2024-10-13-0001.jpg',
      'https://images.unsplash.com/photo-1614729939124-032d1e6d3f14?w=800&q=80',
      'https://images.unsplash.com/photo-1614731922837-0f99f9aa2ff3?w=800&q=80',
      'https://images.unsplash.com/photo-1614732484003-ef9881555dc3?w=800&q=80'
    ]
  },
  {
    id: '2',
    title: 'Ausgabe 2 - Noch nicht tot',
    cover: 'https://images.unsplash.com/photo-1559661184-5d24b67b6d8b?w=800&q=80',
    description: 'A noir detective story set in a cyberpunk metropolis.'
  },
  {
    id: '3',
    title: 'Ausgabe 3 - Der Kampf um das Siegel',
    cover: 'https://images.unsplash.com/photo-1518531933037-91b2f5f229cc?w=800&q=80',
    description: 'A mystical tale of ancient forest spirits and modern-day explorers.'
  },
  {
    id: '4',
    title: 'Ausgabe 4 - Der Ausbruch',
    cover: 'https://images.unsplash.com/photo-1518531933037-91b2f5f229cc?w=800&q=80',
    description: 'A mystical tale of ancient forest spirits and modern-day explorers.'
  },
  {
    id: '5',
    title: 'Ausgabe 5 - Seitenwechsel',
    cover: 'https://images.unsplash.com/photo-1518531933037-91b2f5f229cc?w=800&q=80',
    description: 'Gerade in Arbeit ... - Erscheinungsdatum Februar 2025'
  }
];
---

<Layout title="Der rote Rächer">
  <Navigation client:load />
  <main class="container mx-auto pt-20">
    <section class="py-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4">Der rote Rächer</h1>
        <p class="text-lg text-muted-foreground">
          Allzeit bereit!
        </p>
      </div>
    </section>
    
    <section class="py-10">
      <h2 class="text-2xl font-semibold mb-6">Ausgaben</h2>
      <BookShelf comics={comics} client:load />
    </section>
  </main>
</Layout>